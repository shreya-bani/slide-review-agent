{
  "core_values": ["Impact", "Excellence", "Joy"],
  "voice_characteristics": {
    "always": [
      "Technical but not condescending",
      "Intelligent but not assuming", 
      "Compelling but not hyperbolic"
    ],
    "usually": [
      "Conversational but not informal",
      "Inquisitive but not indecisive",
      "Passionate but not tangential"
    ]
  },
  "word_list": {
    "built-in": "built-in",
    "built in": "built-in",
    "cyberattacks": "cyberattacks",
    "cyber-attacks": "cyberattacks",
    "cybersecurity": "cybersecurity",
    "cyber security": "cybersecurity", 
    "cyber-security": "cybersecurity",
    "code sets": "code sets",
    "codesets": "code sets",
    "code-sets": "code sets",
    "healthcare": "healthcare",
    "health care": "healthcare",
    "public sector": "public sector",
    "public-sector": "public sector",
    "software": "software",
    "softwares": "software",
    "user-friendly": "user-friendly",
    "user friendly": "user-friendly",
    "web-based": "web-based",
    "web based": "web-based"
  },
  "compound_words": {
    "end user": {"noun": "end user", "adjective": "end-user"},
    "open source": {"noun": "open source", "adjective": "open-source"},
    "set up": {"verb": "set up", "noun": "set-up"}
  },
  "acronym_rules": {
    "first_use_full": true,
    "parentheses_format": true,
    "examples": {
      "DRE": "Data Reconciliation Engine (DRE)",
      "VA": "U.S. Department of Veterans Affairs (VA)"
    }
  },
  "bullet_rules": {
    "no_periods": true,
    "parallel_construction": true,
    "capitalize_first": true,
    "multiple_sentences_semicolon": true
  },
  "heading_styles": {
    "font": "Lato",
    "heading_1": {"style": "Bold", "color": "RGB(38,111,160)", "size": 20, "spacing": "0/12"},
    "heading_2": {"style": "Regular", "color": "RGB(38,111,160)", "size": 16, "spacing": "12/2"},
    "heading_3": {"style": "Bold", "color": "RGB(0,8,14)", "size": 11, "spacing": "0/2"},
    "heading_4": {"style": "Italicized", "color": "RGB(0,8,14)", "size": 11, "spacing": "0/2"},
    "body_text": {"style": "Regular", "color": "RGB(0,8,14)", "size": 11, "spacing": "0/6"}
  },
  "punctuation_rules": {
    "en_dash": "â€“",
    "no_em_dash": true,
    "no_double_hyphen": true,
    "one_space_after_period": true,
    "oxford_comma": true
  },
  "numeral_rules": {
    "spell_out_below_100": true,
    "exceptions": ["technical_writing", "proposals"],
    "comma_for_4_digits": true,
    "no_comma_in_dates": true,
    "numerals_before_percent": true
  },
  "quotation_rules": {
    "comma_period_inside": true,
    "semicolon_colon_outside": true,
    "question_dash_exclamation_conditional": true
  },
  "title_case_rules": {
    "capitalize_first_last": true,
    "capitalize_main_words": true,
    "capitalize_longer_than_3": true,
    "italicize_document_titles": true
  },
  "mechanics_rules": {
    "no_hanging_words": true,
    "avoid_word_repetition": true,
    "no_and_or": true,
    "no_contractions_formal": true,
    "no_ampersand_formal": true,
    "no_etc_formal": true,
    "avoid_second_person": true,
    "avoid_unnecessary_gerunds": true
  },
  "temporal_words_to_avoid": [
    "currently", "at this time", "right now", "these days", 
    "nowadays", "recently", "lately", "soon", "in the near future"
  ],
  "vague_terms": [
    "people", "things", "stuff", "various", "several", "many", 
    "some", "a lot", "numerous", "multiple"
  ],
  "gendered_terms": {
    "waitress": "server",
    "waiter": "server", 
    "guys": "people",
    "manpower": "workforce",
    "chairman": "chair",
    "policeman": "police officer",
    "fireman": "firefighter"
  },
  "risk_flags": {
    "client_names": ["pattern_proper_nouns"],
    "dates": ["pattern_dates"],
    "numbers": ["pattern_large_numbers", "pattern_percentages"],
    "patent_claims": ["patent", "intellectual property", "proprietary"],
    "financial": ["$", "million", "billion", "revenue", "profit", "cost"]
  },
  "negative_phrases": {
    "problem": "opportunity",
    "issue": "consideration",
    "won't work": "requires an alternative approach",
    "cannot": "unable to",
    "failed": "requires adjustment",
    "impossible": "challenging",
    "weakness": "area for improvement",
    "setback": "adjustment",
    "disadvantage": "tradeoff"
  }
}