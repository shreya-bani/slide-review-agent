
# Basic app settings
APP_NAME=slide-review-agent
ENVIRONMENT=development
DEBUG=true

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Server configuration
HOST=127.0.0.1
PORT=8000
CORS_ORIGINS=*

# Database Configuration
# PostgreSQL (Azure production)
DATABASE_URL="your-db-url"
DATABASE_SCHEMA="your-schema-name"

# PostgreSQL sync connection (for Alembic migrations and admin tools)
DATABASE_URL_SYNC="your-db-url"

# Database pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# LLM Settings
LLM_PROVIDER=azure # Options: openai, azure, groq, huggingface

LLM_API_ENDPOINT = "your-endpoint-here"
LLM_MODEL = "gpt-5-chat"
LLM_DEPLOY = "gpt-5-chat"

LLM_API_KEY = "your-api-key-here"
LLM_API_VERSION = "2024-12-01-preview"

LLM_CHUNK_SIZE=30000


# File settings
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=./data/uploads
OUTPUT_DIR=./data/outputs
LOGS_DIR=./data/logs

# Demo mode
DEMO_MODE=true
ENABLE_REWRITE = True
REWRITE_BUDGET_MAX_CALLS=5
REWRITE_BUDGET_WINDOW_HOURS=24
BATCH_SIZE_LIMIT=50
USE_LLM_STYLE_CHECKER=true

# Analyzer settings
VADER_NEG_THRESHOLD=-0.05
ANALYZER_INCLUDE_NOTES=false
TEMPERATURE=0.3

# Azure AD Configuration
AZURE_TENANT_ID="your-id-here"
AZURE_CLIENT_ID="your-id-here"
AZURE_CLIENT_SECRET="your-id-here"

AZURE_GROUP_ADMINS="your-id-here"
AZURE_GROUP_USERS="your-id-here"

AZURE_REDIRECT_URI="your redirect-url"

# JWT Configuration
JWT_SECRET_KEY="your-generated-token-here"
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=1440 # 24 hours

# Session Configuration
SESSION_EXPIRY_HOURS=24
SESSION_COOKIE_NAME=slide_review_session
SESSION_COOKIE_SECURE=false  # Set true in production (HTTPS)

